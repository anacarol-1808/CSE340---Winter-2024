<!-- Form -->

<form id="classicationForm">
    <label for="classificationName">New Classification:</label>
    <input type="text" id="classificationName" name="classification_name" pattern="/^[a-zA-Z]+$/" required>
    <div>Requirements:
        <ul>
            <li>text only</li>
            <li>no spaces</li>
            <li>no special characters </li>
        </ul> 
    </div>

    <button type="submit">Add New Classification</button>
</form>