 <!-- content heading -->
 <% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    // Redirect to the home page if there is no title
    res.redirect('/');
} %>

<!-- message -->
<%- messages() %>

<!-- Register Form -->
<form action="/register">
    <label for="fname">First name:</label>
    <input type="text" id="fname" name="account_firstname" required>
    
    <label for="lname">Last name:</label>
    <input type="text" id="lname" name="account_lastname" required>

    <label for="email">Email address:</label>
    <input type="email" id="email" name="account_email" required>

    <label for="password">Password:</label>
    <input type="password" id="password" name="account_password" pattern="(?=.*[A-Z])(?=.*[0-9])(?=.*[^A-Za-z0-9]).{12,}" 
    title="Password must be 12 characters long, contain at least 1 capital letter, 1 number, and 1 special character" required>

    <button type="submit">Register</button>
</form>